import { useState, useCallback } from 'react';
import { useNavigate } from 'react-router-dom';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Alert, AlertDescription } from '@/components/ui/alert';
import ExploreAssets from '@/components/ExploreAssets';
import { ArrowRight, ArrowLeft, TrendingUp, BarChart3 } from 'lucide-react';
import { saveBotConfig } from '@/services/tradingApi';
import type { BotConfig } from '@/types/trading';

const Strategy = () => {
  const navigate = useNavigate();

  // Bot configuration state
  const [config, setConfig] = useState<Partial<BotConfig>>({
    symbol: 'BTC/USD',
    timeframe: '5Min',
    fast_ema_period: 9,
    slow_ema_period: 21,
    quantity: 0.01,
    stop_loss_percent: 2,
    take_profit_percent: 5,
  });

  // Backtest state
  const [backtestConfig, setBacktestConfig] = useState<Partial<BacktestRequest>>({
    symbol: 'BTC/USD',
    timeframe: '5Min',
    fast_ema_period: 9,
    slow_ema_period: 21,
    initial_capital: 100000,
    quantity: 0.01,
    start_date: new Date(Date.now() - 30 * 24 * 60 * 60 * 1000).toISOString().split('T')[0],
    end_date: new Date().toISOString().split('T')[0],
  });

  const [backtestResult, setBacktestResult] = useState<BacktestResult | null>(null);
  const [backtestHistory, setBacktestHistory] = useState<BacktestResult[]>([]);
  const [isBacktesting, setIsBacktesting] = useState(false);

  // Bot status state
  const [botStatus, setBotStatus] = useState<BotStatus | null>(null);
  const [isLoadingStatus, setIsLoadingStatus] = useState(false);

  // UI state
  const [error, setError] = useState<string | null>(null);
  const [success, setSuccess] = useState<string | null>(null);
  const [activeTab, setActiveTab] = useState('configure');

  const loadBotStatus = useCallback(async () => {
    try {
      setIsLoadingStatus(true);
      const status = await getBotStatus();
      // Only update if status actually changed to prevent unnecessary re-renders
      setBotStatus(prevStatus => {
        if (JSON.stringify(prevStatus) === JSON.stringify(status)) {
          return prevStatus;
        }
        return status;
      });
    } catch (err) {
      console.error('Failed to load bot status:', err);
    } finally {
      setIsLoadingStatus(false);
    }
  }, []);

  const loadBacktestHistory = useCallback(async () => {
    try {
      const history = await getBacktestHistory(undefined, 5);
      setBacktestHistory(history);
    } catch (err) {
      console.error('Failed to load backtest history:', err);
    }
  }, []);

  // Load bot status on mount and periodically (conditional polling)
  useEffect(() => {
    // Don't poll when viewing backtest results to reduce performance overhead
    if (activeTab === 'backtest') {
      return;
    }
    
    loadBotStatus();
    
    // Use different polling intervals based on bot status
    const getPollingInterval = () => {
      return botStatus?.is_running ? 15000 : 30000; // 15s if running, 30s if stopped
    };
    
    const interval = setInterval(loadBotStatus, getPollingInterval());
    return () => clearInterval(interval);
  }, [loadBotStatus, botStatus?.is_running, activeTab]);

  // Load backtest history
  useEffect(() => {
    loadBacktestHistory();
  }, [loadBacktestHistory]);

  const handleSaveConfig = useCallback(async () => {
    try {
      setError(null);
      setSuccess(null);
      
      if (!config.symbol || !config.timeframe || !config.quantity) {
        setError('Please fill in all required fields');
        return;
      }

      await saveBotConfig(config as Omit<BotConfig, 'id' | 'created_at' | 'updated_at'>);
      setSuccess('Configuration saved successfully');
    } catch (err: unknown) {
      setError(err instanceof Error ? err.message : 'Failed to save configuration');
    }
  }, [config]);

  const handleRunBacktest = useCallback(async () => {
    try {
      setError(null);
      setSuccess(null);
      setIsBacktesting(true);

      if (!backtestConfig.symbol || !backtestConfig.start_date || !backtestConfig.end_date) {
        setError('Please fill in all required backtest fields');
        return;
      }

      const result = await runBacktest(backtestConfig as BacktestRequest);
      setBacktestResult(result);
      setSuccess('Backtest completed successfully');
      loadBacktestHistory(); // Refresh history
      setActiveTab('backtest'); // Switch to backtest tab
    } catch (err: unknown) {
      setError(err instanceof Error ? err.message : 'Failed to run backtest');
    } finally {
      setIsBacktesting(false);
    }
  }, [backtestConfig, loadBacktestHistory]);

  const handleStartBot = useCallback(async () => {
    try {
      setError(null);
      setSuccess(null);

      if (!config.symbol || !config.timeframe || !config.quantity) {
        setError('Please configure the bot before starting');
        return;
      }

      await startBot({ config: config as Omit<BotConfig, 'id' | 'created_at' | 'updated_at'> });
      setSuccess('Bot started successfully');
      loadBotStatus();
    } catch (err: unknown) {
      setError(err instanceof Error ? err.message : 'Failed to start bot');
    }
  }, [config, loadBotStatus]);

  const handleStopBot = useCallback(async () => {
    try {
      setError(null);
      setSuccess(null);

      await stopBot();
      setSuccess('Bot stopped successfully');
      loadBotStatus();
    } catch (err: unknown) {
      setError(err instanceof Error ? err.message : 'Failed to stop bot');
    }
  }, [loadBotStatus]);

  // Memoize equity curve data transformation
  const equityCurveData = useMemo(() => {
    if (!backtestResult?.equity_curve) return [];
    return backtestResult.equity_curve.map(p => ({
      timestamp: new Date(p.timestamp).toLocaleDateString(),
      equity: toNumber(p.equity)
    }));
  }, [backtestResult?.equity_curve]);

  // Memoize metrics calculations
  const metrics = useMemo(() => {
    if (!backtestResult) return null;
    return {
      totalPnl: toNumber(backtestResult.total_pnl).toFixed(2),
      totalPnlPercent: toNumber(backtestResult.total_pnl_percent).toFixed(2),
      winRate: toNumber(backtestResult.win_rate).toFixed(1),
      maxDrawdown: toNumber(backtestResult.max_drawdown).toFixed(2),
      maxDrawdownPercent: toNumber(backtestResult.max_drawdown_percent).toFixed(2),
      isProfitable: toNumber(backtestResult.total_pnl) >= 0
    };
  }, [backtestResult]);

  return (
    <div className="min-h-screen bg-background">
      <main className="container mx-auto px-4 py-8">
        {/* Header */}
        <div className="mb-8">
          <h1 className="text-3xl font-bold mb-2">Trading Bot Strategy</h1>
          <p className="text-muted-foreground">
            Configure and backtest your EMA Crossover strategy
          </p>
        </div>

        {/* Bot Status Banner */}
        {botStatus && (
          <Card className="mb-6">
            <CardContent className="pt-6">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-4">
                  <div className={`w-3 h-3 rounded-full ${botStatus.is_running ? 'bg-green-500 animate-pulse' : 'bg-gray-300'}`} />
                  <div>
                    <p className="font-medium">
                      {botStatus.is_running ? 'Bot Running' : 'Bot Stopped'}
                    </p>
                    {botStatus.config && (
                      <p className="text-sm text-muted-foreground">
                        {botStatus.config.symbol} • {botStatus.config.timeframe} • 
                        EMA({botStatus.config.fast_ema_period}/{botStatus.config.slow_ema_period})
                      </p>
                    )}
                  </div>
                </div>
                <div className="flex items-center gap-6 text-sm">
                  <div>
                    <p className="text-muted-foreground">Signals</p>
                    <p className="font-medium">{botStatus.signals_generated}</p>
                  </div>
                  <div>
                    <p className="text-muted-foreground">Orders</p>
                    <p className="font-medium">{botStatus.orders_placed}</p>
                  </div>
                  {botStatus.is_running ? (
                    <Button variant="destructive" size="sm" onClick={handleStopBot}>
                      <Square className="w-4 h-4 mr-2" />
                      Stop Bot
                    </Button>
                  ) : (
                    <Button variant="default" size="sm" onClick={handleStartBot}>
                      <Play className="w-4 h-4 mr-2" />
                      Start Bot
                    </Button>
                  )}
                </div>
              </div>
              {botStatus.last_error && (
                <Alert variant="destructive" className="mt-4">
                  <AlertCircle className="h-4 w-4" />
                  <AlertDescription>{botStatus.last_error}</AlertDescription>
                </Alert>
              )}
            </CardContent>
          </Card>
        )}

        {/* Alerts */}
        {error && (
          <Alert variant="destructive" className="mb-6">
            <AlertCircle className="h-4 w-4" />
            <AlertDescription>{error}</AlertDescription>
          </Alert>
        )}
        {success && (
          <Alert className="mb-6">
            <CheckCircle className="h-4 w-4" />
            <AlertDescription>{success}</AlertDescription>
          </Alert>
        )}

        {/* Main Content */}
        <Tabs value={activeTab} onValueChange={setActiveTab}>
          <TabsList className="grid w-full grid-cols-3">
            <TabsTrigger value="configure">
              <Settings className="w-4 h-4 mr-2" />
              Configure
            </TabsTrigger>
            <TabsTrigger value="backtest">
              <BarChart3 className="w-4 h-4 mr-2" />
              Backtest
            </TabsTrigger>
            <TabsTrigger value="history">
              <Activity className="w-4 h-4 mr-2" />
              History
            </TabsTrigger>
          </TabsList>

          {/* Configure Tab */}
          <TabsContent value="configure">
            <div className="grid gap-6 md:grid-cols-2">
              <Card>
                <CardHeader>
                  <CardTitle>Strategy Parameters</CardTitle>
                  <CardDescription>Configure your EMA Crossover strategy</CardDescription>
                </CardHeader>
                <CardContent className="space-y-4">
                  <div>
                    <Label htmlFor="symbol">Symbol</Label>
                    <ExploreAssets 
                      value={config.symbol || 'Select a symbol'}
                      onSelect={(symbol) => setConfig({ ...config, symbol })}
                    />
                  </div>
                  <div>
                    <Label htmlFor="timeframe">Timeframe</Label>
                    <select
                      id="timeframe"
                      className="w-full p-2 border rounded-md"
                      value={config.timeframe}
                      onChange={(e) => setConfig({ ...config, timeframe: e.target.value })}
                    >
                      <option value="1Min">1 Minute</option>
                      <option value="5Min">5 Minutes</option>
                      <option value="15Min">15 Minutes</option>
                      <option value="1Hour">1 Hour</option>
                      <option value="1Day">1 Day</option>
                    </select>
                  </div>
                  <div className="grid grid-cols-2 gap-4">
                    <div>
                      <Label htmlFor="fast_ema">Fast EMA Period</Label>
                      <Input
                        id="fast_ema"
                        type="number"
                        value={config.fast_ema_period || ''}
                        onChange={(e) => setConfig({ ...config, fast_ema_period: e.target.value ? parseInt(e.target.value) : undefined })}
                      />
                    </div>
                    <div>
                      <Label htmlFor="slow_ema">Slow EMA Period</Label>
                      <Input
                        id="slow_ema"
                        type="number"
                        value={config.slow_ema_period || ''}
                        onChange={(e) => setConfig({ ...config, slow_ema_period: e.target.value ? parseInt(e.target.value) : undefined })}
                      />
                    </div>
                  </div>
                  <div>
                    <Label htmlFor="quantity">Position Size</Label>
                    <Input
                      id="quantity"
                      type="number"
                      step="0.001"
                      value={config.quantity || ''}
                      onChange={(e) => setConfig({ ...config, quantity: e.target.value ? parseFloat(e.target.value) : undefined })}
                    />
                  </div>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle>Risk Management</CardTitle>
                  <CardDescription>Optional stop loss and take profit settings</CardDescription>
                </CardHeader>
                <CardContent className="space-y-4">
                  <div>
                    <Label htmlFor="stop_loss">Stop Loss (%)</Label>
                    <Input
                      id="stop_loss"
                      type="number"
                      step="0.1"
                      value={config.stop_loss_percent || ''}
                      onChange={(e) => setConfig({ ...config, stop_loss_percent: e.target.value ? parseFloat(e.target.value) : undefined })}
                      placeholder="e.g., 2.5"
                    />
                  </div>
                  <div>
                    <Label htmlFor="take_profit">Take Profit (%)</Label>
                    <Input
                      id="take_profit"
                      type="number"
                      step="0.1"
                      value={config.take_profit_percent || ''}
                      onChange={(e) => setConfig({ ...config, take_profit_percent: e.target.value ? parseFloat(e.target.value) : undefined })}
                      placeholder="e.g., 5.0"
                    />
                  </div>
                  <Button onClick={handleSaveConfig} className="w-full">
                    Save Configuration
                  </Button>
                </CardContent>
              </Card>
            </div>

            {/* Backtest Configuration */}
            <Card className="mt-6">
              <CardHeader>
                <CardTitle>Run Backtest</CardTitle>
                <CardDescription>Test your strategy on historical data</CardDescription>
              </CardHeader>
              <CardContent>
                <div className="grid gap-4 md:grid-cols-3 mb-4">
                  <div>
                    <Label htmlFor="bt_symbol">Symbol</Label>
                    <ExploreAssets 
                      value={backtestConfig.symbol || 'Select a symbol'}
                      onSelect={(symbol) => setBacktestConfig({ ...backtestConfig, symbol })}
                    />
                  </div>
                  <div>
                    <Label htmlFor="bt_start">Start Date</Label>
                    <Input
                      id="bt_start"
                      type="date"
                      value={backtestConfig.start_date}
                      onChange={(e) => setBacktestConfig({ ...backtestConfig, start_date: e.target.value })}
                    />
                  </div>
                  <div>
                    <Label htmlFor="bt_end">End Date</Label>
                    <Input
                      id="bt_end"
                      type="date"
                      value={backtestConfig.end_date}
                      onChange={(e) => setBacktestConfig({ ...backtestConfig, end_date: e.target.value })}
                    />
                  </div>
                </div>
                <Button onClick={handleRunBacktest} disabled={isBacktesting} className="w-full">
                  {isBacktesting ? (
                    <>
                      <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                      Running Backtest...
                    </>
                  ) : (
                    <>
                      <TrendingUp className="w-4 h-4 mr-2" />
                      Run Backtest
                    </>
                  )}
                </Button>
              </CardContent>
            </Card>
          </TabsContent>

          {/* Backtest Results Tab */}
          <TabsContent value="backtest">
            {backtestResult && metrics ? (
              <div className="space-y-6">
                {/* Metrics Summary */}
                <div className="grid gap-4 md:grid-cols-4">
                  <Card>
                    <CardHeader className="pb-2">
                      <CardDescription>Total P&L</CardDescription>
                    </CardHeader>
                    <CardContent>
                      <p className={`text-2xl font-bold ${metrics.isProfitable ? 'text-green-600' : 'text-red-600'}`}>
                        ${metrics.totalPnl}
                      </p>
                      <p className="text-sm text-muted-foreground">
                        {metrics.totalPnlPercent}%
                      </p>
                    </CardContent>
                  </Card>
                  <Card>
                    <CardHeader className="pb-2">
                      <CardDescription>Win Rate</CardDescription>
                    </CardHeader>
                    <CardContent>
                      <p className="text-2xl font-bold">{metrics.winRate}%</p>
                      <p className="text-sm text-muted-foreground">
                        {backtestResult.winning_trades}W / {backtestResult.losing_trades}L
                      </p>
                    </CardContent>
                  </Card>
                  <Card>
                    <CardHeader className="pb-2">
                      <CardDescription>Total Trades</CardDescription>
                    </CardHeader>
                    <CardContent>
                      <p className="text-2xl font-bold">{backtestResult.total_trades}</p>
                    </CardContent>
                  </Card>
                  <Card>
                    <CardHeader className="pb-2">
                      <CardDescription>Max Drawdown</CardDescription>
                    </CardHeader>
                    <CardContent>
                      <p className="text-2xl font-bold text-red-600">
                        ${metrics.maxDrawdown}
                      </p>
                      <p className="text-sm text-muted-foreground">
                        {metrics.maxDrawdownPercent}%
                      </p>
                    </CardContent>
                  </Card>
                </div>

                {/* Equity Curve */}
                <Card>
                  <CardHeader>
                    <CardTitle>Equity Curve</CardTitle>
                  </CardHeader>
                  <CardContent>
                    {equityCurveData.length > 0 ? (
                      <div className="w-full" style={{ height: '300px' }}>
                        <LineChart width={800} height={300} data={equityCurveData}>
                          <CartesianGrid strokeDasharray="3 3" />
                          <XAxis dataKey="timestamp" />
                          <YAxis domain={['auto', 'auto']} />
                          <Tooltip />
                          <Line type="monotone" dataKey="equity" stroke="#8884d8" dot={false} />
                        </LineChart>
                      </div>
                    ) : (
                      <div className="h-[300px] flex items-center justify-center text-muted-foreground">
                        No data available
                      </div>
                    )}
                  </CardContent>
                </Card>

                {/* Trades Table */}
                <Card>
                  <CardHeader>
                    <CardTitle>Trade History</CardTitle>
                  </CardHeader>
                  <CardContent>
                    <div className="overflow-x-auto">
                      <table className="w-full">
                        <thead>
                          <tr className="border-b">
                            <th className="text-left p-2">Entry Time</th>
                            <th className="text-left p-2">Side</th>
                            <th className="text-right p-2">Entry Price</th>
                            <th className="text-right p-2">Exit Price</th>
                            <th className="text-right p-2">P&L</th>
                            <th className="text-left p-2">Exit Reason</th>
                          </tr>
                        </thead>
                        <tbody>
                          {backtestResult.trades.slice(0, 10).map((trade, idx) => (
                            <tr key={idx} className="border-b">
                              <td className="p-2 text-sm">
                                {new Date(trade.entry_time).toLocaleString()}
                              </td>
                              <td className="p-2">
                                <Badge variant={trade.side === 'buy' ? 'default' : 'destructive'}>
                                  {trade.side.toUpperCase()}
                                </Badge>
                              </td>
                              <td className="p-2 text-right">${toNumber(trade.entry_price).toFixed(2)}</td>
                              <td className="p-2 text-right">
                                {trade.exit_price ? `$${toNumber(trade.exit_price).toFixed(2)}` : '-'}
                              </td>
                              <td className={`p-2 text-right font-medium ${trade.pnl && toNumber(trade.pnl) >= 0 ? 'text-green-600' : 'text-red-600'}`}>
                                {trade.pnl ? `$${toNumber(trade.pnl).toFixed(2)} (${toNumber(trade.pnl_percent).toFixed(2)}%)` : '-'}
                              </td>
                              <td className="p-2 text-sm text-muted-foreground">
                                {trade.exit_reason || '-'}
                              </td>
                            </tr>
                          ))}
                        </tbody>
                      </table>
                    </div>
                  </CardContent>
                </Card>
              </div>
            ) : (
              <Card>
                <CardContent className="py-12 text-center">
                  <BarChart3 className="w-16 h-16 mx-auto mb-4 text-muted-foreground" />
                  <p className="text-muted-foreground">
                    No backtest results yet. Configure and run a backtest to see results.
                  </p>
                </CardContent>
              </Card>
            )}
          </TabsContent>

          {/* History Tab */}
          <TabsContent value="history">
            <Card>
              <CardHeader>
                <CardTitle>Backtest History</CardTitle>
                <CardDescription>Previous backtest results</CardDescription>
              </CardHeader>
              <CardContent>
                {backtestHistory.length > 0 ? (
                  <div className="space-y-4">
                    {backtestHistory.map((result) => (
                      <div key={result.id} className="border rounded-lg p-4 hover:bg-accent cursor-pointer" onClick={() => setBacktestResult(result)}>
                        <div className="flex justify-between items-start mb-2">
                          <div>
                            <p className="font-medium">{result.symbol}</p>
                            <p className="text-sm text-muted-foreground">
                              {new Date(result.start_date).toLocaleDateString()} - {new Date(result.end_date).toLocaleDateString()}
                            </p>
                          </div>
                          <Badge variant={toNumber(result.total_pnl) >= 0 ? 'default' : 'destructive'}>
                            {toNumber(result.total_pnl) >= 0 ? '+' : ''}{toNumber(result.total_pnl_percent).toFixed(2)}%
                          </Badge>
                        </div>
                        <div className="grid grid-cols-4 gap-4 text-sm">
                          <div>
                            <p className="text-muted-foreground">Trades</p>
                            <p className="font-medium">{result.total_trades}</p>
                          </div>
                          <div>
                            <p className="text-muted-foreground">Win Rate</p>
                            <p className="font-medium">{toNumber(result.win_rate).toFixed(1)}%</p>
                          </div>
                          <div>
                            <p className="text-muted-foreground">EMA</p>
                            <p className="font-medium">{result.fast_ema_period}/{result.slow_ema_period}</p>
                          </div>
                          <div>
                            <p className="text-muted-foreground">Drawdown</p>
                            <p className="font-medium">{toNumber(result.max_drawdown_percent).toFixed(2)}%</p>
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                ) : (
                  <div className="py-12 text-center">
                    <Activity className="w-16 h-16 mx-auto mb-4 text-muted-foreground" />
                    <p className="text-muted-foreground">No backtest history available</p>
                  </div>
                )}
              </CardContent>
            </Card>
          </TabsContent>
        </Tabs>
      </main>
    </div>
  );
};

export default Strategy;
